<!-- app/views/admin/bid_logs/index.html.erb -->
<div class="admin-bid-logs">
  <div class="page-header">
    <h1>入札ログ管理</h1>
    <div class="header-actions">
      <%= link_to 'ダッシュボードに戻る', admin_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <!-- フィルター -->
  <div class="filter-section">
    <%= form_with url: admin_bid_logs_path, method: :get, local: true, class: 'filter-form' do |form| %>
      <div class="filter-row">
        <div class="filter-group">
          <%= form.label :auction_id, 'オークション' %>
          <%= form.select :auction_id, 
              options_from_collection_for_select(@auctions, :id, :item_name_with_id, params[:auction_id]),
              { include_blank: 'すべて' }, 
              { class: 'form-control' } %>
        </div>
        
        <div class="filter-group">
          <%= form.label :user_id, 'ユーザー' %>
          <%= form.select :user_id, 
              options_from_collection_for_select(@users, :id, :name, params[:user_id]),
              { include_blank: 'すべて' }, 
              { class: 'form-control' } %>
        </div>
        
        <div class="filter-group">
          <%= form.label :date_from, '開始日' %>
          <%= form.date_field :date_from, value: params[:date_from], class: 'form-control' %>
        </div>
        
        <div class="filter-group">
          <%= form.label :date_to, '終了日' %>
          <%= form.date_field :date_to, value: params[:date_to], class: 'form-control' %>
        </div>
        
        <div class="filter-group">
          <%= form.submit 'フィルター適用', class: 'btn btn-primary' %>
          <%= link_to 'リセット', admin_bid_logs_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 統計情報 -->
  <div class="stats-section">
    <div class="stat-card">
      <h3>総入札数</h3>
      <p class="stat-number"><%= @total_bids %></p>
    </div>
    <div class="stat-card">
      <h3>総入札金額</h3>
      <p class="stat-number"><%= format_currency_with_symbol(@total_amount) %></p>
    </div>
    <div class="stat-card">
      <h3>参加ユーザー数</h3>
      <p class="stat-number"><%= @unique_users %></p>
    </div>
  </div>

  <!-- 入札ログ一覧 -->
  <div class="bid-logs-table">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>時刻</th>
          <th>ユーザー</th>
          <th>オークション</th>
          <th>入札金額</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @bid_logs.each do |bid_log| %>
          <tr class="bid-log-row">
            <td><%= bid_log.id %></td>
            <td><%= bid_log.bid_time.strftime('%m/%d %H:%M:%S') %></td>
            <td><%= bid_log.user.name %></td>
            <td>
              <%= link_to "オークション #{bid_log.auction.id}", admin_auction_path(bid_log.auction), 
                          class: 'auction-link' %>
              <br>
              <small class="item-name"><%= bid_log.auction.item&.name %></small>
            </td>
            <td class="bid-amount"><%= format_currency_with_symbol(bid_log.bid_amount) %></td>
            <td class="actions">
              <%= link_to '詳細', admin_bid_log_path(bid_log), class: 'btn btn-sm btn-info' %>
            <%= link_to '削除', admin_bid_log_path(bid_log), 
                        data: { turbo_method: :delete, confirm: 'この入札を削除しますか？' }, 
                        class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- ページネーション -->
  <% if @bid_logs.respond_to?(:current_page) %>
    <div class="pagination">
      <%= paginate @bid_logs %>
    </div>
  <% end %>
</div>

<style>
