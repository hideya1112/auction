<!-- app/views/auctions/participant.html.erb -->
<div class="participant-view">
  <div class="user-header">
    <h1>オークション参加者画面</h1>
    <% if session[:user_name] %>
      <div class="user-info">
        <span class="welcome">ようこそ、<%= session[:user_name] %>さん！</span>
        <%= link_to 'ログアウト', user_logout_get_path, class: 'logout-btn' %>
      </div>
    <% else %>
      <div class="login-required">
        <%= link_to 'ログインが必要です', user_login_path, class: 'login-link' %>
      </div>
    <% end %>
  </div>
  
  <div class="current-bid-display">
    <h2>現在の入札金額: <%= format_currency_with_symbol(@auction.current_bid) %></h2>
    <p class="bidder-info">現在入札者: <span id="bidder_count" class="bidder-count"><%= @auction.current_bidders %></span>名</p>
  </div>

  <div class="item-image">
    <%= image_tag "sample.png", alt: "オークション商品" %>
  </div>

  <% if session[:user_id] %>
    <div class="bid-form">
      <h3>入札フォーム</h3>
      <%= form_with model: @auction, url: auction_path(@auction), method: :patch, remote: true do |form| %>
        <div class="form-group">
          <label for="auction_current_bid">入札金額</label>
          <%= form.number_field :current_bid, min: @auction.current_bid, step: 1, class: "bid-input", id: "bid_input" %>
        </div>
        <%= form.submit "入札する", class: "bid-button" %>
      <% end %>
    </div>
  <% else %>
    <div class="login-required-message">
      <p>入札するには<%= link_to 'ログイン', user_login_path %>が必要です</p>
    </div>
  <% end %>

  <div class="navigation">
    <p><%= link_to "モニター画面を見る", monitor_auction_path(@auction), target: "_blank" %></p>
  </div>
</div>

