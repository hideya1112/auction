<!-- app/views/auctions/participant.html.erb -->
<div class="participant-view">
  <div class="user-header">
    <h1>オークション参加者画面</h1>
    <% if session[:user_name] %>
      <div class="user-info">
        <span class="welcome">ようこそ、<%= session[:user_name] %>さん！</span>
        <%= link_to 'ログアウト', user_logout_get_path, class: 'logout-btn' %>
      </div>
    <% else %>
      <div class="login-required">
        <%= link_to 'ログインが必要です', user_login_path, class: 'login-link' %>
      </div>
    <% end %>
  </div>
  
  <div class="current-bid-display">
    <h2>現在の入札金額: <span id="current_bid"><%= format_currency_with_symbol(@auction.current_bid) %></span></h2>
    <p class="bidder-info">現在入札者: <span id="bidder_count" class="bidder-count"><%= @auction.current_bidders %></span>名</p>
  </div>

  <div class="item-image">
    <%= image_tag "sample.png", alt: "オークション商品" %>
  </div>

  <% if session[:user_id] %>
    <div class="bid-form atm-style">
      <h3>入札フォーム</h3>
      
      <!-- 金額表示エリア -->
      <div class="amount-display">
        <div class="amount-label">入札金額</div>
        <div class="amount-value" id="amount_display">0</div>
        <div class="currency-symbol">円</div>
      </div>
      
      <!-- 数字キーパッド -->
      <div class="keypad">
        <div class="keypad-row">
          <button type="button" class="keypad-btn" data-number="1">1</button>
          <button type="button" class="keypad-btn" data-number="2">2</button>
          <button type="button" class="keypad-btn" data-number="3">3</button>
        </div>
        <div class="keypad-row">
          <button type="button" class="keypad-btn" data-number="4">4</button>
          <button type="button" class="keypad-btn" data-number="5">5</button>
          <button type="button" class="keypad-btn" data-number="6">6</button>
        </div>
        <div class="keypad-row">
          <button type="button" class="keypad-btn" data-number="7">7</button>
          <button type="button" class="keypad-btn" data-number="8">8</button>
          <button type="button" class="keypad-btn" data-number="9">9</button>
        </div>
        <div class="keypad-row">
          <button type="button" class="keypad-btn clear-btn" id="clear_btn">クリア</button>
          <button type="button" class="keypad-btn" data-number="0">0</button>
          <button type="button" class="keypad-btn backspace-btn" id="backspace_btn">⌫</button>
        </div>
      </div>
      
      <!-- アクションボタン -->
      <div class="action-buttons">
        <button type="button" class="action-btn cancel-btn" id="cancel_btn">キャンセル</button>
        <button type="button" class="action-btn submit-btn" id="submit_btn">入札する</button>
      </div>
      
      <!-- 隠しフィールド -->
      <%= form_with model: @auction, url: auction_path(@auction), method: :patch, data: { turbo_method: :patch }, id: "bid_form", style: "display: none;" do |form| %>
        <%= form.hidden_field :current_bid, id: "bid_input" %>
      <% end %>
    </div>
  <% else %>
    <div class="login-required-message">
      <p>入札するには<%= link_to 'ログイン', user_login_path %>が必要です</p>
    </div>
  <% end %>

</div>

<style>
.participant-view {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
  font-family: Arial, sans-serif;
}

.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 10px;
  border-bottom: 1px solid #eee;
}

.user-header h1 {
  margin: 0;
  color: #2c3e50;
}

.user-info {
  display: flex;
  align-items: center;
}

.welcome {
  margin-right: 15px;
  font-size: 18px;
  color: #3498db;
}

.logout-btn {
  background-color: #e74c3c;
  color: white;
  padding: 8px 12px;
  border: none;
  border-radius: 4px;
  font-size: 14px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.logout-btn:hover {
  background-color: #c0392b;
}

.login-required {
  color: #e74c3c;
  font-size: 16px;
}

.login-link {
  color: #3498db;
  text-decoration: none;
}

.login-link:hover {
  text-decoration: underline;
}

.current-bid-display {
  background: #f0f8ff;
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 20px;
  text-align: center;
}

.current-bid-display h2 {
  color: #2c3e50;
  margin: 0 0 15px 0;
}

.item-image {
  text-align: center;
  margin: 20px 0;
}

.item-image img {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}


.navigation {
  text-align: center;
  margin-top: 20px;
}

.navigation a {
  color: #7f8c8d;
  text-decoration: none;
}

.navigation a:hover {
  text-decoration: underline;
}

.login-required-message {
  background-color: #f8d7da;
  color: #721c24;
  padding: 15px;
  border-radius: 8px;
  margin-top: 20px;
  text-align: center;
}

.login-required-message a {
  color: #3498db;
  text-decoration: none;
  font-weight: bold;
}

.login-required-message a:hover {
  text-decoration: underline;
}

.bidder-info {
  margin: 0;
  font-size: 16px;
  color: #34495e;
}

.bidder-count {
  font-weight: bold;
  color: #e74c3c;
  font-size: 18px;
}

/* シックなATM風スタイル */
.atm-style {
  background: #ffffff;
  border: 1px solid #e1e8ed;
  border-radius: 12px;
  padding: 32px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  color: #2c3e50;
  max-width: 480px;
  margin: 0 auto;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.atm-style h3 {
  text-align: center;
  margin-bottom: 32px;
  font-size: 20px;
  color: #2c3e50;
  font-weight: 600;
  letter-spacing: -0.5px;
}

.amount-display {
  background: #f8f9fa;
  border: 1px solid #e9ecef;
  border-radius: 8px;
  padding: 24px;
  margin-bottom: 32px;
  text-align: center;
  position: relative;
}

.amount-label {
  font-size: 14px;
  color: #6c757d;
  margin-bottom: 12px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.amount-value {
  font-size: 32px;
  font-weight: 700;
  color: #2c3e50;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  letter-spacing: -1px;
}

.currency-symbol {
  position: absolute;
  right: 24px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 18px;
  color: #6c757d;
  font-weight: 500;
}

.keypad {
  display: grid;
  grid-template-rows: repeat(4, 1fr);
  gap: 12px;
  margin-bottom: 32px;
}

.keypad-row {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
}

.keypad-btn {
  background: #ffffff;
  border: 1px solid #e1e8ed;
  border-radius: 8px;
  color: #2c3e50;
  font-size: 18px;
  font-weight: 600;
  padding: 16px;
  cursor: pointer;
  transition: all 0.15s ease;
  min-height: 56px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.keypad-btn:hover {
  background: #f8f9fa;
  border-color: #3498db;
  color: #3498db;
  transform: translateY(-1px);
  box-shadow: 0 2px 8px rgba(52, 152, 219, 0.15);
}

.keypad-btn:active {
  transform: translateY(0);
  box-shadow: 0 1px 4px rgba(52, 152, 219, 0.2);
}

.clear-btn {
  background: #fff5f5 !important;
  border-color: #fed7d7 !important;
  color: #e53e3e !important;
}

.clear-btn:hover {
  background: #fed7d7 !important;
  border-color: #e53e3e !important;
  color: #c53030 !important;
}

.backspace-btn {
  background: #fffaf0 !important;
  border-color: #fbd38d !important;
  color: #dd6b20 !important;
}

.backspace-btn:hover {
  background: #fbd38d !important;
  border-color: #dd6b20 !important;
  color: #c05621 !important;
}

.action-buttons {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
}

.action-btn {
  border: 1px solid;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  padding: 14px 24px;
  cursor: pointer;
  transition: all 0.15s ease;
  min-height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background: #ffffff;
  border-color: #e1e8ed;
  color: #6c757d;
}

.cancel-btn:hover {
  background: #f8f9fa;
  border-color: #adb5bd;
  color: #495057;
  transform: translateY(-1px);
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.submit-btn {
  background: #2c3e50;
  border-color: #2c3e50;
  color: #ffffff;
}

.submit-btn:hover {
  background: #34495e;
  border-color: #34495e;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(44, 62, 80, 0.3);
}

.submit-btn:disabled {
  background: #f8f9fa;
  border-color: #e9ecef;
  color: #adb5bd;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

/* レスポンシブデザイン */
@media (max-width: 768px) {
  .atm-style {
    padding: 24px;
    margin: 16px;
    border-radius: 8px;
  }
  
  .amount-value {
    font-size: 28px;
  }
  
  .keypad-btn {
    font-size: 16px;
    padding: 14px;
    min-height: 48px;
  }
  
  .action-btn {
    font-size: 14px;
    padding: 12px 20px;
    min-height: 44px;
  }
  
  .atm-style h3 {
    font-size: 18px;
    margin-bottom: 24px;
  }
}
</style> 